datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Cadastro {
  id_usuario             Int         @id @default(autoincrement())
  nome_usuario           String      @db.VarChar(99)
  email_usuario          String      @db.VarChar(99)
  senha_usuario          String      @db.VarChar(99)
  cep_usuario            String      @db.VarChar(99)
  rua_usuario            String      @db.VarChar(99)
  cidade_usuario         String      @db.VarChar(99)
  estado_usuario         EstadoEnum
  escola_usuario         String      @db.VarChar(100)
  data_nascimento_usuario DateTime
  escolaridade_usuario   EscolaridadeEnum
  sexo_usuario           SexoEnum
  adm                    Boolean?     @default(false) // Valor padr√£o "false"
  conquistas             Conquistas?
}

model Conquistas {
  fk_id_usuario Int     @id
  conquista_1   Boolean
  conquista_2   Boolean
  conquista_3   Boolean
  usuario       Cadastro @relation(fields: [fk_id_usuario], references: [id_usuario])
}

model FaleConosco {
  id                  Int    @id @default(autoincrement())
  nome_reclamacao     String @db.VarChar(99)
  email_reclamacao    String @db.VarChar(99)
  assunto_reclamacao  String @db.VarChar(99)
  mensagem_reclamacao String @db.Text
}

model Videos {
  id         Int     @id @default(autoincrement())
  video_link String? @db.Text
}

model Livros {
  id          Int     @id @default(autoincrement())
  livro_link  String? @db.Text
}

enum EstadoEnum {
  E
  AC
  AL
  AP
  AM
  BA
  CE
  DF
  ES
  GO
  NA
  MT
  MS
  MG
  PA
  PB
  PR
  PE
  PI
  RJ
  RN
  RS
  RO
  RR
  SC
  SP
  SE
  TO
}

enum EscolaridadeEnum {
  ENSINO_FUNDAMENTAL_I
  ENSINO_FUNDAMENTAL_II
  ENSINO_MEDIO
  OUTROS
}

enum SexoEnum {
  MASCULINO
  FEMININO
  NAO_DECLARAR
}